{
	"manifest_version": 2,
	"version": "1.0",

	"name": "Basecamp Tagger",
	"description": "A github style Tagging system for Basecamp",

	"background": {
		"scripts": ["js/background.js"],
		"persistent": true
	},

	"page_action": {
		"default_icon": "icon.png"
	},

	"content_scripts": [
		{
	      "matches": [
	        "https://basecamp.com/*"
	      ],
	      "js": [ "vendor/jquery-3.1.1.min.js", "js/content.js" ],
	      "css": [ "css/content.css" ]
	    }
	],

	"options_page": "options.html",

	"permissions": [
		"https://basecamp.com/*",
		"storage"
	]
}
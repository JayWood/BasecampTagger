{
	"manifest_version": 2,
	"version": "1.0",

	"name": "Basecamp Tagger",
	"description": "A github style Tagging system for Basecamp",
	// "default_locale": "en",

	"browser_action": {
		"default_icon": "icon.png"
//		"default_popup": "popup.html",
//		"default_title": "Basecamp Tagger"
	},

	"content_scripts": [
		{
	      "matches": [
	        "https://basecamp.com/*"
	      ],
	      "js": [ "vendor/jquery-3.1.1.min.js", "js/content.js" ],
	      "css": [ "css/content.css" ]
	    }
	],

	"options_page": "options.html",

	"permissions": [
		"http://*/*",
		"https://*/*",
		"cookies",
		"webRequest",
		"webRequestBlocking",
		"storage"
	]
}